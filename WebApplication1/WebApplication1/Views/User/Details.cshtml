@model WebApplication1.Models.UserModel

@{
    ViewBag.Title = Model.Login;
}

<h2>Информация о пользователе: @Model.Login</h2>
<div class="container">
    <ul class="nav nav-list">
        <li>@Html.ActionLink("Обратно к списку", "List")</li>
        <li>@Html.ActionLink("Редактировать", "Edit", new { id = Model.Entity.Id })</li>
        <li>@Html.ActionLink("Удалить", "Delete", new { id = Model.Entity.Id })</li>
    </ul>
</div>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Login)</th>
        <td>@Html.DisplayFor(model => model.Login)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.FIO)</th>
        <td>@Html.DisplayFor(model => model.FIO)</td>
    </tr>   
    <tr>
        <th>@Html.DisplayNameFor(model => model.CreationAutor)</th>
        <td>@Html.DisplayFor(model => model.CreationAutor)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
        <td>@Html.DisplayFor(model => model.Email)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Age)</th>
        <td>@Html.DisplayFor(model => model.Age)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Avatar)</th>
        <td>
            @Html.DisplayFor(model => model.Avatar)
        </td>
    </tr>
</table>
